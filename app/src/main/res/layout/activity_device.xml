<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeviceActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" android:layout_height="60dp" android:layout_width="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="60dp"
        >

        <RelativeLayout
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/device_name"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="Device Name"
                android:padding="10dp"
                android:textSize="10pt"
                android:textColor="#646464"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:background="@drawable/editext_border"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sync"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/name"
            android:layout_marginTop="10dp">


            <EditText
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/device_last_synced"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Synced"
                android:padding="10dp"
                android:textSize="10pt"
                android:textColor="#646464"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:background="@drawable/editext_border"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pair"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/sync"
            android:layout_marginTop="10dp">


            <EditText
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/device_paired_with"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="Paired With"
                android:textSize="10pt"
                android:textColor="#646464"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:background="@drawable/editext_border"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/pair"
            android:layout_marginTop="10dp">


            <EditText
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/device_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="10pt"
                android:hint="Type"
                android:textColor="#646464"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:background="@drawable/editext_border"
                android:layout_centerVertical="true" />

        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>